<openerp>
<data>

<record id="fleet_work_order_view_form" model="ir.ui.view">
    <field name="name">fleet.work.order Form</field>
    <field name="model">fleet.work.order</field>
    <field name="inherit_id" ref="fleet_work_order.fleet_work_order_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="before">
            <field name="agent_id" context="{'show_address': 1}" options="{'always_reaload':True}"/>
        </xpath>
    </field>
</record>

<record id="res_partner_action" model="ir.actions.act_window">
    <field name="name">Agents</field>
    <field name="res_model">res.partner</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('is_fleet_agent','=',True)]</field>
    <field name="context">{'default_is_fleet_agent' : True}</field>
</record>

<menuitem id="res_partner_menu"
    parent="fleet_work_order.fleet_work_order_root_menu"
    name="Agents"
    action="res_partner_action"
    sequence="2"/>

</data>
</openerp>
