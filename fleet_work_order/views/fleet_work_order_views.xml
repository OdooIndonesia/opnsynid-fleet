<openerp>
<data>
<menuitem id="fleet_work_order_root_menu"
    parent="fleet.menu_root"
    name="Work Order"
    sequence="0"/>
    
<record id="fleet_work_order_view_tree" model="ir.ui.view">
    <field name="name">fleet.work.order Tree</field>
    <field name="model">fleet.work.order</field>
    <field name="arch" type="xml">
        <tree string="Fleet Work Order">
            <field name="name"/>
            <field name="date_start"/>
            <field name="date_end"/>
            <field name="partner_id"/>
            <field name="start_location_id"/>
            <field name="end_location_id"/>
            <field name="vehicle_id"/>
            <field name="driver_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="fleet_work_order_view_form" model="ir.ui.view">
    <field name="name">fleet.work.order Form</field>
    <field name="model">fleet.work.order</field>
    <field name="arch" type="xml">
        <form string="Fleet Work Order">
            <header>
                <button name="button_confirm" string="Confirm" type="action" class="oe_highlight" states="draft"/>
                <button name="button_depart" string="Depart" type="action" class="oe_highlight" states="confirm"/>
                <button name="button_arrive" string="Arrive" type="action" class="oe_highlight" states="depart"/>                
                <button name="button_cancel" string="Cancel" type="action" states="draft,confirm,depart,arrive"/>
                <button name="button_restart" string="Set To Draft" type="action" states="cancelled"/>                                
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <label for="name"/>
                <h1>
                    <field name="name"/>
                </h1>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <group string="Order Information" name="group_1_1_1" colspan="2" col="2">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="partner_id" context="{'show_address':1}" options="{'always_reload':True}"/>
                        </group>
                        <group string="Vehicle" name="group_1_1_1" colspan="2" col="2">
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="co_driver_id"/>
                        </group>
                    </group>
                    <group name="group_1_2" string="Passanger" colspan="1" col="2">
                        <group name="group_1_2_1" colspan="2" col="2">
                            <field name="passanger_manifest"/>
                            <field name="passanger_count"/>
                        </group>
                        <group name="group_1_2_1" string="Odometer" colspan="2" col="2">
                            <field name="start_odometer"/>
                            <field name="end_odometer"/>
                        </group>
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="page_passanger" string="Passanger Manifest" attrs="{'invisible':[('passanger_manifest','=',False)]}">
                        <field name="passanger_manifest_ids" colspan="4"/>
                    </page>
                    <page name="page_route" string="Detail Routes">
                        <group name="group_2" colspan="4" col="6">
                            <field name="start_location_id" context="{'show_address':1}" options="{'always_reload':True}"/>
                            <field name="end_location_id" context="{'show_address':1}" options="{'always_reload':True}"/>
                            <field name="distance"/>
                        </group>
                        <field name="route_ids" colspan="4">
                            <tree string="Routes" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="route_template_id"/>
                                <field name="start_location_id"/>
                                <field name="end_location_id"/>
                                <field name="distance"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="fleet_work_order_action" model="ir.actions.act_window">
    <field name="name">Work Orders</field>
    <field name="res_model">fleet.work.order</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="fleet_work_order_menu"
    parent="fleet_work_order_root_menu"
    name="Work Order"
    action="fleet_work_order_action"
    sequence="1"/>

<record id="fleet_passanger_manifest_view_tree" model="ir.ui.view">
    <field name="name">fleet.passanger.manifest Tree</field>
    <field name="model">fleet.passanger.manifest</field>
    <field name="arch" type="xml">
        <tree string="Passanger Manifest">
            <field name="name"/>
            <field name="partner_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="fleet_passanger_manifest_view_form" model="ir.ui.view">
    <field name="name">fleet.passanger.manifest Form</field>
    <field name="model">fleet.passanger.manifest</field>
    <field name="arch" type="xml">
        <form string="Passanger Manifest">
            <header>
                <button name="button_confirm" string="Confirm" type="action" class="oe_highlight" states="draft"/>
                <button name="button_boarding" string="Boarding" type="action" class="oe_highlight" states="confirm"/>
                <button name="button_no_show" string="No Show" type="action" class="oe_highlight" states="confirm"/>
                <button name="button_cancel" string="Cancel" type="action" class="oe_highlight" states="draft,boarding,no_show"/>
                <button name="button_restrat" string="Restart" type="action" class="oe_highlight" states="cancelled"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <label for="name"/>
                <h3>
                    <field name="name"/>
                </h3>
                <group name="group_1" colspan="4" col="2">
                    <field name="order_id"/>
                    <field name="partner_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="fleet_passanger_manifest_action" model="ir.actions.act_window">
    <field name="name">Passanger</field>
    <field name="res_model">fleet.passanger.manifest</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="fleet_passanger_manifest_menu"
    parent="fleet_work_order_root_menu"
    name="Passanger"
    action="fleet_passanger_manifest_action"
    sequence="2"/>

<record id="fleet_route_template_view_tree" model="ir.ui.view">
    <field name="name">fleet.route.template Tree</field>
    <field name="model">fleet.route.template</field>
    <field name="arch" type="xml">
        <tree string="Route Template">
            <field name="name"/>
            <field name="start_location_id"/>
            <field name="end_location_id"/>
            <field name="distance"/>
        </tree>
    </field>
</record>

<record id="fleet_route_template_view_form" model="ir.ui.view">
    <field name="name">fleet.route.template Form</field>
    <field name="model">fleet.route.template</field>
    <field name="arch" type="xml">
        <form string="Route Template">
            <group name="group_1">
                <field name="name"/>
                <field name="start_location_id"/>
                <field name="end_location_id"/>
                <field name="distance"/>
                <field name="active"/>
            </group>
        </form>
    </field>
</record>

<record id="fleet_route_template_action" model="ir.actions.act_window">
    <field name="name">Route Template</field>
    <field name="res_model">fleet.route.template</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="fleet_route_template_menu"
    parent="fleet.fleet_configuration"
    name="Route Template"
    action="fleet_route_template_action"
    sequence="1"/>

</data>
</openerp>
